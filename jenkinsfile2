pipeline {
    agent any
    tools {
        maven 'maven-1'
    }
    stages {
        stage("build jar") {
            steps {
                script {
                    echo "building the application"
                    //sh 'mvn package'
                }
            }

        }
        stage("build image") {
            steps {
                script {
                    echo "building the docker image "
                    withCredentials([usernamePassword(credentialsId:'docker-pass', passwordVariable:'PASS',usernameVariable:'USER')])
                    sh 'docker build -t mavrick13/jenkins-images:jma-2.0 .'
                    sh "echo $PASS | docker login -u $USER --password-stdin"
                    sh 'docker push mavrick13/jenkins-images:jma-2.0'

                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo "deploying"
                    //gv.deployApp()
                }
            }
        }
    }
}