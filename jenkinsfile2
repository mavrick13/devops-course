pipeline {
    agent any
    tools {
        maven 'maven-1'
    }
    stages {
        stage("build jar") {
            steps {
                script {
                    echo "building the application"
                    sh 'mvn package'
                
                }
            }

        }
        stage("build image") {
            steps {
                script {
                    echo "building the docker image "
                    withCredentials([usernamePassword(credentialsId: 'docker-pass', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh 'start mvn package'
                        sh 'start docker build -t mavrick13/jenkins-images:jma-2.0 .'
                        sh "echo $PASS | start docker login -u $USER --password-stdin"
                        sh 'start docker push mavrick13/jenkins-images:jma-2.0'
                                    
                    }
                    

                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo "deploying"
                    //gv.deployApp()
                }
            }
        }
    }
}
